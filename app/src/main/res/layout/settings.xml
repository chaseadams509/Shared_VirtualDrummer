<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="s10.shared_virtualdrummer">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="9"><![CDATA[>]]>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="back"
            android:id="@+id/back_drum_options"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="âš™"
            android:id="@+id/settings_drum_options"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="240dp"
            android:layout_height="106dp"
            android:text="Drum  Sounds"
            android:id="@+id/drum_sounds_drum_options"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="240dp"
            android:layout_height="103dp"
            android:text="Drum Kit"
            android:id="@+id/drum_kit_drum_options"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="240dp"
            android:layout_height="110dp"
            android:text="Left/Right Handed"
            android:id="@+id/lr_drum_options"
            android:layout_row="3"
            android:layout_column="1" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="3" />

    </GridLayout>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1" >

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="set"
            android:id="@+id/settings_home"
            android:layout_gravity="right"
            android:layout_weight="0.07" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/play_home"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.44" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Drum Options"
            android:id="@+id/drum_options_home"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.26" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/volume_home"
            android:layout_weight="0.07"
            android:indeterminate="false" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="9"><![CDATA[>]]>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="back"
            android:id="@+id/back_drum_options"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="set"
            android:id="@+id/settings_drum_options"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="240dp"
            android:layout_height="106dp"
            android:text="Drum  Sounds"
            android:id="@+id/drum_sounds_drum_options"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="240dp"
            android:layout_height="103dp"
            android:text="Drum Kit"
            android:id="@+id/drum_kit_drum_options"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="240dp"
            android:layout_height="110dp"
            android:text="Left/Right Handed"
            android:id="@+id/lr_drum_options"
            android:layout_row="3"
            android:layout_column="1" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="3" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="back"
            android:id="@+id/back_settings"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:id="@+id/english_settings"
            android:layout_row="1"
            android:layout_column="1" />

        <ToggleButton
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:text="New ToggleButton"
            android:id="@+id/blue_tooth_settings"
            android:layout_row="1"
            android:layout_column="13"
            android:checked="false" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:id="@+id/japanese_settings"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="set"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="14" />

        <TextView
            android:layout_width="167dp"
            android:layout_height="196dp"
            android:text="New Text"
            android:id="@+id/text_settings"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="13" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volume_settings"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="15"
            android:layout_rowSpan="2"
            android:indeterminate="false" />

    </GridLayout>


</ViewFlipper>